[Unit]
Description=Merge Tesla dashcam videos from all three cameras
After=network.target
After=systemd-user-session.service
After=loadSSD.service
RequiresMountsFor=/media/pavan/Samsung_T5/Footage/Raw

[Service]
User=pavan
ExecStart=/home/pavan/TeslaCamMerge/MergeTeslaCam.py
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target
