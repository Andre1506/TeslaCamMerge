[Unit]
Description=Start filebrowser with database in project path
After=network.target multi-user.target mergeTeslaCam.service
RequiresMountsFor=SSD_MOUNT_POINT

[Service]
User=PROJECT_USER
ExecStartPre=/bin/sleep 60
ExecStart=FILEBROWSER_PATH -d PROJECT_PATH/filebrowser.db
Restart=on-failure
RestartSec=60

[Install]
WantedBy=smbd.service
