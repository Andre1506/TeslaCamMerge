[Unit]
Description=Upload selected dashcam footage to Google Drive
After=network.target systemd-user-session.service loadSSD.service
RequiresMountsFor=SSD_MOUNT_POINT

[Service]
User=PROJECT_USER
ExecStart=PROJECT_PATH/TeslaCamMerge/UploadDrive.py
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target mergeTeslaCam.service
