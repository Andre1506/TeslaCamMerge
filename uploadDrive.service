[Unit]
Description=Upload selected dashcam footage to Google Drive
After=network.target
After=systemd-user-session.service
After=loadSSD.service
RequiresMountsFor=/media/pavan/Samsung_T5

[Service]
User=pavan
ExecStart=PROJECT_PATH/TeslaCamMerge/UploadDrive.py
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target
WantedBy=mergeTeslaCam.service
